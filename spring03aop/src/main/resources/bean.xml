<!--    aop 环绕通知-->
    <aop:config>
        <!-- 配置的代码都写在此处 -->
        <aop:aspect id="txAdvice" ref="txManager">
            <!-- 配置切入点 -->
            <aop:pointcut id="pt1" expression="execution(* com.xxc.service.impl.*.*(..))"/>
            <!-- 环绕通知 -->
            <aop:around method="transactionAround" pointcut-ref="pt1"></aop:around>
        </aop:aspect>
    </aop:config>

